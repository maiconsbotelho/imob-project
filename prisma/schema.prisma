// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Property {
  id          String         @id @default(uuid())
  title       String
  description String
  price       Float
  type        PropertyType
  status      PropertyStatus
  bedrooms    Int
  bathrooms   Int
  area        Float
  parking     Int
  address     String
  city        String
  state       String
  images      String[]
  videoUrl    String?
  featured    Boolean        @default(false)
  createdAt   DateTime       @default(now()) 

  @@map("properties")
}

enum PropertyType {
  casa
  apartamento
  terreno
}

enum PropertyStatus {
  venda
  aluguel
}
